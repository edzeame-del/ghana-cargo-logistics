# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Application Environment
NODE_ENV=production
PORT=5000

# Database Connection - Google Cloud SQL
# Format: postgresql://username:password@localhost/database?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
DATABASE_URL=postgresql://dbuser:YOUR_SECURE_PASSWORD@localhost/cargo_logistics?host=/cloudsql/YOUR_PROJECT_ID:us-central1:cargo-logistics-db

# Session Management
SESSION_SECRET=your-super-secure-session-secret-at-least-32-characters-long

# Google Sheets Integration (Optional)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}
GOOGLE_SHEETS_ID=your-main-tracking-sheet-id
GOOGLE_SHEETS_ID_PENDING=your-pending-goods-sheet-id
GOOGLE_SHEETS_ID_PENDING_COMPLETE=your-complete-goods-sheet-id

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
CLOUD_SQL_CONNECTION_NAME=your-project-id:us-central1:cargo-logistics-db